<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView 
        android:id="@+id/list_item_img"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:src="@android:drawable/ic_menu_agenda"
        android:contentDescription="@string/text_img_description"
        />
    <TextView 
        android:id="@+id/list_item_text_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/list_item_img"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/text_name"/>"
    <TextView 
        android:id="@+id/list_item_text_message"
        android:layout_toRightOf="@+id/list_item_img"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_item_text_name"
        android:text="@string/text_message"/>
    <TextView 
        android:id="@+id/list_item_text_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/text_date"/>
</RelativeLayout>
